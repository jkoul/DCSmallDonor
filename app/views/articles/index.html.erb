<% if current_user %>
<div>
  <h3>Welcome, <%= @user.email %>!</h3>
  <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class => "btn btn-danger" %>
  <%= link_to "Back to Admin Portal", "/admin", :class => "btn btn-primary" %>
</div>
<% end %>

<h2>List of Coalition News Articles</h2>
<%= link_to "Add New Article", new_article_path, :class => "btn btn-lg btn-primary" %>

<div class="col-md-12">
  <h3>Press Coverage</h3>
  <div class="row">
    <ul class="admin-article-list">
      <% @press.each do |item| %>
      <li class="row each">
        <div class="col-md-8 col-xs-12">
          <div><%= link_to item.title, item.url, :target => "_blank" %></div>
          <div><strong>Source:</strong> <%= item.source %>; <strong>Date:</strong> <%= item.date.strftime("%B %e, %Y") %>
          </div>
        </div>
        <div class="col-md-4 col-xs-12 admin-edit-delete">
          <div class="edit">
            <%= link_to "Edit Article Info", edit_article_path(item), :class => "btn btn-sm btn-default" %>
          </div>
          <div class="delete">
            <%= form_for(item, method: :delete) do |f| %>
              <%= f.submit "Delete Article", :class => "btn btn-sm btn-danger" %>
            <% end %>
          </div>
        </div>
      </li>
      <% end %>
